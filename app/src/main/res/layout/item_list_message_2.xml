<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ln_message"
        android:background="@drawable/bo_vien"
        android:layout_toLeftOf="@+id/iv_contact"
        android:layout_marginRight="@dimen/size10dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_list_message_2"
            android:text="@string/newmessage"
            android:textSize="@dimen/size18sp"
            android:padding="@dimen/size10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="@dimen/size52dp"
        android:id="@+id/iv_contact"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/size10dp"
        android:layout_height="@dimen/size52dp"/>

</RelativeLayout>